{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "plugin": {
    "pattern": ".so",
    "folder": "./plugins/"
  },
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "1ms",
  "extra_config": {
    "security/http": {
      "allowed_hosts": ["localhost"],
      "browser_xss_filter": true,
      "is_development": true
    },
    "plugin/http-server": {
      "name": ["api-key-auth", "payment-checkout", "payment-webhook"],
      "api-key-auth": {
        "protected_paths_regexp": "^/digital-twin/.*$"
      },
      "payment-checkout": {
        "path": "/payment/checkout"
      },
      "payment-webhook": {
        "path": "/payment/webhook"
      }
    }
  },
  "endpoints": [
    {
      "endpoint": "/digital-twin/ping",
      "method": "GET",
      "output_encoding": "negotiate",
      "input_headers": ["Authorization"],
      "backend": [
        {
          "method": "GET",
          "encoding": "string",
          "url_pattern": "/ping",
          "host": ["192.168.0.13:8080"]
        }
      ]
    }
  ]
}
